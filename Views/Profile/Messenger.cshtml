
@{

    ViewBag.Title = "Messenger";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Soc.Models.user ur = ViewBag.currentuser as Soc.Models.user;
    string color;
}
@if (ur.color != null)
            {
                color = ur.color;
            }
            else
            {
                color = "rgb(47, 164, 7)";
            }
<link href="~/Content/Messenger.css" rel="stylesheet" />
    <div style="background-color:@color ;margin-top:-0.4rem!important;ovwerflow:hidden" >
        <div class="row justify-content-center" style="background-color:@color">
            <div class="col-md-4 col-xl-3 chat">
                <div class="card mb-sm-3 mb-md-0 contacts_card">
                    <div class="card-header">
                        <div class="input-group">
                            <input type="text" placeholder="Search..." name="" class="form-control search">
                            <div class="input-group-prepend">
                                <span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body contacts_body">

                        <ul class="contacts">
                            @foreach (Soc.Models.user usr in ViewBag.onChat)
                            {
                                <li class="card-of-user" data-name="@usr.name" data-surnae="@usr.surname" data-id="@usr.id">
                                    <div class="d-flex bd-highlight">
                                        <div class="img_cont">
                                            <img src="@Url.Content(usr.profile_photo)" class="rounded-circle user_img">
                                        </div>
                                        <div id="user-@usr.id" class="user_info">
                                            <span>@usr.name @usr.surname <span id="badge-@usr.id" class="badge badge-danger"></span></span>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div class="col-md-8 col-xl-6 chat">
                <div class="card">
                    <div class="card-header msg_head">
                        <div class="d-flex bd-highlight">
                            <div class="user_info-bage">

                            </div>
                        </div>
                        <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
                    </div>
                    <div id="contain" class="card-body msg_card_body ">
                        <div class="panel-body msg_container_base">

                        </div>
                        <div class="card-footer">
                            <div class="input-group">
                                <div class="input-group-append">
                                    <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
                                </div>
                                <textarea name="" class="form-control type_msg" placeholder="Type your message..."></textarea>
                                <div class="input-group-append">
                                    <span class="input-group-text btn btn-primary send_btn">send</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
